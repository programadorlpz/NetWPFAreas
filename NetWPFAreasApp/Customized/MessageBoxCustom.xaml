<?xml version="1.0" encoding="UTF-8"?>
<Window x:Class="NetWPFAreasApp.Customized.MessageBoxCustom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        ResizeMode="NoResize"
        Width="300"
        Height="150"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True">

    <Border CornerRadius="15" Background="White" BorderBrush="#DDDDDD" BorderThickness="1">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Error" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#0078D4" Margin="0,10,0,0"/>
            <TextBlock x:Name="MessageTextBlock" Text="Usuario o contraseña incorrectos" FontSize="14" HorizontalAlignment="Center" Foreground="Black" Margin="10"/>
            <Button Content="Aceptar" Width="80" Margin="0,10,0,0" HorizontalAlignment="Center" Click="AcceptButton_Click" Background="#0078D4" Foreground="White" BorderBrush="Transparent"/>
        </StackPanel>
    </Border>
</Window>
